<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">


    <style name="btnStyleHome">
        <item name="android:background">@drawable/btn_app</item>
        <item name="android:textColor">@color/txtColor2</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/_20ssp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btnStyleHome2">
        <item name="android:background">@drawable/btn_app2</item>
        <item name="android:textColor">@color/txtColor2</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/_20ssp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>